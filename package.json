{
  "devDependencies": {
    "hardhat": "^2.7.1",
    "prettier": "^2.3.2",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5"
  },
  "scripts": {
    "black": "black --check --include \"(tests|scripts)\" .",
    "format": "prettier --write '**/*.*(sol|json)'",
